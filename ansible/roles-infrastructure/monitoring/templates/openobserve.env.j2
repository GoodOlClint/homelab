# OpenObserve Configuration
ZO_ROOT_USER_EMAIL={{ openobserve_root_user_email }}
ZO_ROOT_USER_PASSWORD={{ openobserve_root_user_pass }}
ZO_DATA_DIR=/data
ZO_HTTP_PORT=5080
ZO_GRPC_PORT=5081

# Performance settings
ZO_COMPACT_ENABLED=true
ZO_COMPACT_INTERVAL=3600
ZO_MEMORY_CACHE_MAX_SIZE=512

# Ingestion settings
ZO_INGEST_ALLOWED_UPTO=24

# Metrics settings
ZO_PROMETHEUS_ENABLED=true
ZO_TELEMETRY_ENABLED=false

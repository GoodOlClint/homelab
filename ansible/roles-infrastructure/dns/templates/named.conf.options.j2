options {
  directory "/var/cache/bind";
  recursion yes;
  allow-query { any; };
  listen-on-v6 { any; };
  listen-on {
{% for ip in dns_listen_ips %}
  {{ ip }};
{% endfor %}
  };
  forwarders {
    1.1.1.1;
    8.8.8.8;
    9.9.9.9;
  };
  dnssec-validation auto;
  auth-nxdomain no;    # conform to RFC1035
};

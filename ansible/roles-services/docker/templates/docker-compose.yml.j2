  kiwix:
    image: ghcr.io/kiwix/kiwix-serve:latest
    container_name: kiwix
    restart: unless-stopped
    logging:
      driver: json-file
    ports:
      - 8090:8080
    environment:
      - TZ={{ kiwix_timezone }}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - kiwix_config:/data
    command:
      - '*.zim'
  boinc:
    image: linuxserver/boinc:latest
    container_name: boinc
    runtime: nvidia
    restart: unless-stopped
    logging:
      driver: json-file
    ports:
      - 7080:8080
      - 7081:8081
      - 31416:31416
    security_opt:
      - seccomp:unconfined #optional
    environment:
      - NVIDIA_VISIBLE_DEVICES=all
      - PUID={{ boinc_user }}
      - PGID={{ boinc_group }}
      - TZ={{ boinc_timezone }}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - boinc_config:/config
#      - plex_media:/data
  portainer:
    container_name: portainer
    image: portainer/portainer-ce:latest
    restart: unless-stopped
    ports:
      - 9000:9000
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_config:/data
  doge-node:
    container_name: doge-node
    image: goodolclint/dogecoin-node:latest
    restart: unless-stopped
    ports:
      - 22555:22555
      - 3000:3000
    environment:
      - TZ={{ doge_node_timezone }}
    volumes:
      - doge-node_config:/data


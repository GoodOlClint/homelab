# Proxmox Backup Server Configuration
pbs_admin_password: "changeme"
pbs_backup_user_password: "changeme"
pbs_backup_token: "YOUR-API-TOKEN-HERE"  # API token for backup@pbs!backup-token
pbs_fingerprint: "YOUR-PBS-FINGERPRINT-HERE"  # PBS server SSL certificate fingerprint
pbs_backup_enabled: true  # Enable PBS backups (set to false for legacy SMB backups)

plex_smb_server: 172.16.100.152
plex_smb_share: backups/plex
plex_smb_user: plexbackup
plex_smb_pass: "changeme"
plex_smb_mount: /mnt/plexbackup

# Updated PBS repository format: user@realm!token@host:datastore:namespace
plex_pbs_repository: "backup@pbs!backup-token@proxmox-backup.core.goodolclint.internal:synology:plex"
plex_pbs_password: "{{ pbs_backup_token }}"
postgres_pbs_repository: "backup@pbs!backup-token@proxmox-backup.core.goodolclint.internal:synology:databases"
postgres_pbs_password: "{{ pbs_backup_token }}"
